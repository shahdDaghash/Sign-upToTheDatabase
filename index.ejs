                <div id="msg"></div>
                <div id="Buttons">
                    <input type='submit' id="submit" value="submit">
                </div>
                <br>
            </form>
        </div>
    </section>
    <section id="tableSection">
        <div>
            <form action="/del" method="POST">
                <button id="Delete"><strong>Delete Row</strong></button>
            </form>
            <form action="/delAll" method="POST">
                <button id="Clear"><strong>Clear table</strong></button>
            </form>
        </div>
        <form action="/check" method="POST" id="thisDelete">
            <button id="DeleteSelected"><strong>Delete selected</strong></button>
        
        <table id="Table">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>Date Of Birth</th>
                    <th>Email</th>
                </tr>
            </thead>

            <tbody>
                <%recordsList.forEach(record=>{%>
                    <tr>
                        <td>
                            <input type="checkbox" id="check" name="checks[]" class="check" value="<%=record._id%>" onclick="OnClick()" >
                        </td>
                        
